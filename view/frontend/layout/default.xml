<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="header.container">
            <block name="free.shipping" template="Pixel_FreeShipping::free-shipping-banner.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="free-shipping-banner" xsi:type="array">
                                <item name="component" xsi:type="string">
                                    Pixel_FreeShipping/js/free-shipping
                                </item>
                                <item name="config" xsi:type="array">
                                    <item name="messageDefault" xsi:type="string">FREE shipping on orders over $100!
                                    </item>
                                    <item name="messageItemsInCart" xsi:type="string">You're $00.00 away from FREE
                                        shipping!
                                    </item>
                                    <item name="messageFreeShipping" xsi:type="string">Your order now has FREE shipping!
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>

        </referenceContainer>

    </body>
</page>
